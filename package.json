    "babel-jest": "^23.4.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-define": "^2.0.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb": "^17.1.0",
